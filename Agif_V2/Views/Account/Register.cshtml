@using DataTransferObject.Request;
@model userProfileDTO;
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="container-fluid mt-2">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-center align-items-center">
                <div class="card shadow p-4 container-sm">
                    <div class="pagetitle text-center mb-4">
                        <h1>Sign Up</h1>
                    </div>
                    <form asp-action="Register" method="post">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="userName">Username:</label>
                                    <input asp-for="userName" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ArmyNo">Army No:</label>
                                    <input asp-for="ArmyNo" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="rank">Rank:</label>
                                    <select class="form-select select" asp-for="rank"></select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name">Name:</label>
                                    <input  asp-for="Name" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email">Email:</label>
                                    <input type="email" asp-for="Email" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="MobileNo">Mobile No:</label>
                                    <input type="number" asp-for="MobileNo" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="regtCorps">Regt/Corps:</label>
                                    <select class="form-select select" asp-for="regtCorps"></select>
                                </div>
                            </div><div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="UnitId">Unit Name:</label>
                                    <select class="form-select select" asp-for="UnitId"></select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ApptId">Appointment:</label>
                                    <select class="form-select select" asp-for="ApptId"></select>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center align-items-center">
                            <button type ="submit" class="btn btn-success">Sign Up</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/devjs/register.js"></script>
<script>
    $(document).ready(function () {
        loadDropdown();
    })
</script>