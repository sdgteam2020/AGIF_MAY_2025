@model DataTransferObject.Model.CommonOnlineApplicationResponse

@{
    ViewData["Title"] = "Application Deatils";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";

    // Fetch loantype from query string
    string loanType = Context.Request.Query["formtype"].ToString()?.ToUpper() ?? "CA";
}
<style>
    .lblforprint {
        min-width: 200px;
        font-weight: 600;
    }
</style>

@if (Model != null)
{


    <div class="container mt-4">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white text-center">
                <h3 class="mb-0"><i class="bi bi-file-earmark-text"></i> Application Details</h3>
            </div>
            <div class="card-body">
                @if (Model != null)
                {
                    <div class="row ">
                        <div class="col-md-6 ">
                            <div class="p-3 d-flex align-items-center">
                                <strong class="me-2 lblforprint">Army Number:</strong>
                                <span class="text-break flex-grow-1">(@Model.OnlineApplicationResponse.DdlRank) @Model.OnlineApplicationResponse.Number</span>
                            </div>
                        </div>
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">Applicant Name:</strong>
                                <span>@Model.OnlineApplicationResponse.ApplicantName</span>
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">Date of Birth:</strong>
                                <span>@Model.OnlineApplicationResponse.DateOfBirth?.ToString("dd-MM-yyyy")</span>
                            </div>
                        </div>
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">Date of Commission:</strong>
                                <span>@Model.OnlineApplicationResponse.DateOfCommission?.ToString("dd-MM-yyyy")</span>
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">Date of Retirement:</strong>
                                <span>@Model.OnlineApplicationResponse.DateOfRetirement?.ToString("dd-MM-yyyy")</span>
                            </div>
                        </div>
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">Aadhar Card No:</strong>
                                <span>@Model.OnlineApplicationResponse.AadharCardNo</span>
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">PAN Card No:</strong>
                                <span>@Model.OnlineApplicationResponse.PanCardNo</span>
                            </div>
                        </div>
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">Mobile No:</strong>
                                <span>@Model.OnlineApplicationResponse.MobileNo</span>
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">Email:</strong>
                                <span>@Model.OnlineApplicationResponse.Email</span>
                            </div>
                        </div>
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">Regt/Corps:</strong>
                                <span>@Model.OnlineApplicationResponse.RegtCorps</span>
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">Parent Unit:</strong>
                                <span>@Model.OnlineApplicationResponse.ParentUnit</span>
                            </div>
                        </div>
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">Present Unit:</strong>
                                <span>@Model.OnlineApplicationResponse.PresentUnit</span>
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">Present Unit Pin:</strong>
                                <span>@Model.OnlineApplicationResponse.PresentUnitPin</span>
                            </div>
                        </div>
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">Army Post Office:</strong>
                                <span>@Model.OnlineApplicationResponse.ArmyPostOffice</span>
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">Next Fmn HQ:</strong>
                                <span>@Model.OnlineApplicationResponse.NextFmnHQ</span>
                            </div>
                        </div>
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">Village/Town:</strong>
                                <span>@Model.OnlineApplicationResponse.Vill_Town</span>
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">Post Office:</strong>
                                <span>@Model.OnlineApplicationResponse.PostOffice</span>
                            </div>
                        </div>
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">District:</strong>
                                <span>@Model.OnlineApplicationResponse.Distt</span>
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">State:</strong>
                                <span>@Model.OnlineApplicationResponse.State</span>
                            </div>
                        </div>
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">Zip Code:</strong>
                                <span>@Model.OnlineApplicationResponse.Code</span>
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">Salary Account No:</strong>
                                <span>@Model.OnlineApplicationResponse.SalaryAcctNo</span>
                            </div>
                        </div>
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">IFSC Code:</strong>
                                <span>@Model.OnlineApplicationResponse.IfsCode</span>
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">Bank Name:</strong>
                                <span>@Model.OnlineApplicationResponse.NameOfBank</span>
                            </div>
                        </div>
                        <div class="col-md-6 ">
                            <div class="p-3 h-100 d-flex align-items-center">
                                <strong class="me-2 lblforprint">Bank Branch:</strong>
                                <span>@Model.OnlineApplicationResponse.NameOfBankBranch</span>
                            </div>
                        </div>
                    </div>

                    @* Conditional fields based on loantype *@
                    @if (loanType == "HBA")
                    {
                        <div class="row ">
                            <div class="col-md-6 ">
                                <div class="p-3 h-100 d-flex align-items-center">
                                    <strong class="me-2 lblforprint">Loan Type:</strong>
                                    <span>HBA</span>
                                </div>
                            </div>
                            <div class="col-md-6 ">
                                <div class="p-3 h-100 d-flex align-items-center">
                                    <strong class="me-2 lblforprint">Property Type:</strong>
                                    <span>@Model.HbaApplicationResponse.PropertyType</span>
                                </div>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-md-6 ">
                                <div class="p-3 h-100 d-flex align-items-center">
                                    <strong class="me-2 lblforprint">Property Address:</strong>
                                    <span>@Model.HbaApplicationResponse.PropertyAddress</span>
                                </div>
                            </div>
                            <div class="col-md-6 ">
                                <div class="p-3 h-100 d-flex align-items-center">
                                    <strong class="me-2 lblforprint">Property Cost:</strong>
                                    <span>@Model.HbaApplicationResponse.PropertyCost</span>
                                </div>
                            </div>
                        </div>
                    }
                    @* Add more loan type conditions as needed *@

                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card border-info">
                                <div class="card-header bg-info text-white">
                                    <i class="bi bi-file-earmark-pdf"></i> Document View
                                </div>
                                <div class="card-body">
                                    @* Example: Show uploaded document links or previews *@
                                    @*  @if (Model.OnlineApplicationResponse.Documents != null && Model.OnlineApplicationResponse.Documents.Any())
                            {
                            <ul class="list-group">
                            @foreach (var doc in Model.OnlineApplicationResponse.Documents)
                            {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-paperclip"></i> @doc.FileName</span>
                            <a href="@doc.Url" target="_blank" class="btn btn-sm btn-outline-primary">View</a>
                            </li>
                            }
                            </ul>
                            }
                            else
                            {
                            <span class="text-muted">No documents uploaded.</span>
                            } *@
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning text-center">No application data found.</div>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">No application data found.</div>
}

