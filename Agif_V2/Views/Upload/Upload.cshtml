                                            </div>

                                            <div class="col-md-2">
                                                <label class="form-label fw-bold"></label>
                                                <div id="SeviceExtnPre" class="file-preview-container">
                                                    <i class="bi bi-eye icon-clickable" ></i>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                            </div>
                        }
                        else if (formType == "PCA")
                        {
                            <!-- PCA Form Upload Fields -->
                            <div class="col-md-12">
                                <div class="row">
                                    <!-- Cancelled Cheque -->
                                    <div class="col-md-6 mb-3">
                                        <div class="row">
                                            <div class="col-md-10">
                                                <label for="CancelledCheque" class="form-label fw-bold">
                                                    1. Cancelled Cheque
                                                </label>
                                                <input class="form-control file-upload-limited" type="file" id="CancelledCheque" name="CancelledCheque" data-preview="#cancelledChequePreview" accept=".pdf" required>
                                                <p class="file-error-message text-danger" ></p> <!-- Error message container -->
                                                @Html.ValidationMessageFor(m => m.CancelledCheque, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="col-md-2">
                                                <label class="form-label fw-bold"></label>
                                                <div id="cancelledChequePreview" class="file-preview-container">
                                                    <i class="bi bi-eye icon-clickable" ></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                                <div class="row">
                                    <!-- Pay Slip -->
                                    <div class="col-md-6 mb-3">


                                        <div class="row">
                                            <div class="col-md-10">
                                                <label for="PaySlipPdf" class="form-label fw-bold">
                                                    2. First Page of Pay Slip
                                                </label>
                                                <input class="form-control file-upload-limited" type="file" id="PaySlipPdf" name="PaySlipPdf" data-preview="#paySlipPreview" accept=".pdf" required>
                                                <p class="file-error-message text-danger" ></p> <!-- Error message container -->
                                                @Html.ValidationMessageFor(m => m.PaySlipPdf, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="col-md-2">
                                                <label class="form-label fw-bold"></label>
                                                <div id="paySlipPreview" class="file-preview-container">
                                                    <i class="bi bi-eye icon-clickable" ></i>
                                                </div>
                                            </div>
                                        </div>



                                    </div>

                                    <!-- Preview for Pay Slip -->


                                </div>



                                <div class="row">
                                    <!-- Quotation -->
                                    <div class="col-md-6 mb-3">


                                        <div class="row">
                                            <div class="col-md-10">
                                                <label for="PaySlipPdf" class="form-label fw-bold">
                                                    3. Quotation
