                                                <p class="file-error-message text-danger" ></p> <!-- Error message container -->
                                                @Html.ValidationMessageFor(m => m.PaySlipPdf, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="col-md-2">
                                                <label class="form-label fw-bold"></label>
                                                <div id="paySlipPreview" class="file-preview-container">
                                                    <i class="bi bi-eye icon-clickable" ></i>
                                                </div>
                                            </div>
                                        </div>



                                    </div>

                                    <!-- Preview for Pay Slip -->


                                </div>



                                <div class="row">
                                    <!-- Quotation -->
                                    <div class="col-md-6 mb-3">


                                        <div class="row">
                                            <div class="col-md-10">
                                                <label for="PaySlipPdf" class="form-label fw-bold">
                                                    3. Quotation (RC & Insurance in case of old car)
                                                </label>
                                                <input class="form-control file-upload-limited" type="file" id="QuotationPdf" name="QuotationPdf" data-preview="#quotationPreview" accept=".pdf" required>
                                                <p class="file-error-message text-danger" ></p> <!-- Error message container -->
                                                @Html.ValidationMessageFor(m => m.QuotationPdf, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="col-md-2">
                                                <label class="form-label fw-bold"></label>
                                                <div id="quotationPreview" class="file-preview-container">
                                                    <i class="bi bi-eye icon-clickable" ></i>
                                                </div>
                                            </div>
                                        </div>



                                    </div>



                                </div>


                                <div class="row">
                                    <!-- Valid Driving License -->
                                    <div class="col-md-6 mb-3">


                                        <div class="row">
                                            <div class="col-md-10">
                                                <label for="DrivingLicensePdf" class="form-label fw-bold">
                                                    4. Valid Driving License
                                                </label>
                                                <input class="form-control file-upload-limited" type="file" id="DrivingLicensePdf" name="DrivingLicensePdf" data-preview="#DrivingLicensePreview" accept=".pdf" required>
                                                <p class="file-error-message text-danger" ></p> <!-- Error message container -->
                                                @Html.ValidationMessageFor(m => m.DrivingLicensePdf, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="col-md-2">
                                                <label class="form-label fw-bold"></label>
                                                <div id="DrivingLicensePreview" class="file-preview-container">
                                                    <i class="bi bi-eye icon-clickable" ></i>
                                                </div>
                                            </div>
                                        </div>



                                    </div>



                                </div>

                                <div class="row">
                                    <!-- Service Extn -->
                                    <div class="col-md-6 mb-3">


                                        <div class="row">
                                            <div class="col-md-10">
                                                <label for="SeviceExtnPdf" class="form-label fw-bold">
