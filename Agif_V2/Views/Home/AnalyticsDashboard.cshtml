@{
    ViewData["Title"] = "Analytics Dashboard";
    
}
@{
    var adminTypeId = ViewBag.AdminTypeId as int? ?? 0;
}

<link href="~/css/analyticsdashboard.css" rel="stylesheet" />
<script src="~/js/chart.min.js"></script>
<script src="~/devjs/analyticsdashboard.js"></script>

<input type="hidden" id="AdminTypeId" value="@ViewBag.AdminTypeId" />

<div class="container-fluid">
    <div class="text-center my-4">
        <h2 class="fw-bold">Analytics Dashboard</h2>
    </div>

    <div class="d-flex justify-content-center my-3">
        <div class="btn-group gap-3" role="group" aria-label="Mode">
                <button id="btnLoan" type="button" class="btn btn-primary active d-none">Loan</button>
                <button id="btnMaturity" type="button" class="btn btn-outline-primary d-none">Maturity</button>
            </div>
    </div>

    <div class="bg-light p-4 rounded mb-4">
        <!-- Title + Year Dropdown -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">Applications by Month</h4>
            <div class="d-flex align-items-center">
                <label for="yearSelect" class="me-2 mb-0">Select Year:</label>
                <select id="yearSelect" class="form-select">
                    <!-- Years will be filled dynamically -->
                </select>
            </div>
        </div>
        <!-- Chart Container -->
        <div class="canvasDiv">
            <canvas id="applicationByMonth"></canvas>
            <canvas id="maturityChartCanvas" class="d-none"></canvas>

        </div>
    </div>

    <!-- Top Ranks Section -->
    <div class="row">
        <div class="col-md-6 col-lg-6">
            <div class="bg-light p-4 rounded">
                <h4 class="mb-3">Top Ranks</h4>
                <!-- Chart Container -->
                <div class="canvasTopRanks">
                    <canvas id="topRanksChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-6">
            <div class="bg-light p-4 rounded">
                <h4 class="mb-3">Top Regt/Corps</h4>
                <!-- Chart Container -->
                <div class="canvasTopRegtCorps canvasTopRanks">
                    <canvas id="topRegtChart"></canvas>
                </div>
            </div>
        </div>
    </div>


    <br />

    <div class="row">
        <div class="col-md-6 col-lg-6 loan">
            <div class="bg-light p-4 rounded">
                <h4 class="mb-3">Hierarchy of Car Loan Type by ApplicationType</h4>
                <!-- Chart Container -->
                <div class="canvasTopRanks">
                    <canvas id="loanStatisticsChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-6">
            <div class="bg-light p-4 rounded">
                <h4 class="mb-3">Top 10 Units by Number of Applications</h4>
                <!-- Chart Container -->
                <div class="canvasTopRegtCorps canvasTopRanks">
                    <canvas id="topUnitsChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <br />

    <div class="row">
        <div>
            <div class="bg-light p-4 rounded loan">
                <h4 class="mb-3">Top 10 Units by Total Loan Amount</h4>
                <!-- Chart Container -->
                <div class="canvasTopRanks">
                    <canvas id="topUnitsLoanChart"></canvas>
                </div>
            </div>
        </div>
    </div>
    <br />


    <div class="row">
        <div class="col-md-6 col-lg-6">
            <div class="bg-light p-4 rounded loan">
                <h4 class="mb-3">Top 10 Dealers</h4>
                <!-- Chart Container -->
                <div class="canvasTopRanks">
                    <canvas id="topDealersChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-6">
            <div class="bg-light p-4 rounded loan">
                <h4 class="mb-3">Loan Amount for Top 10 Dealers</h4>
                <!-- Chart Container -->
                <div class="canvasTopRegtCorps canvasTopRanks">
                    <canvas id="topLoanDealersChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <br />

    <div class="row">
        <div>
            <div class="bg-light p-4 rounded loan">
                <h4 class="mb-3">Top 20 Approved Personnel by Total Loan Amount</h4>
                <!-- Chart Container -->
                <div class="canvasTopRanks">
                    <canvas id="topPersonnelChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-6 col-lg-6">
            <div class="bg-light p-4 rounded loan">
                <h4 class="mb-3">Applications by Status</h4>
                <!-- Chart Container -->
                <div class="canvasTopRanks">
                    <canvas id="applicationStatusChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-6">
            <div class="bg-light p-4 rounded loan">
                <h4 class="mb-3">Applications by Age Group</h4>
                <!-- Chart Container -->
                <div class="canvasTopRegtCorps canvasTopRanks">
                    <canvas id="AgeGroupsChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <br />
    <div class="row">
        <div>
            <div class="bg-light p-4 rounded loan">
                <h4 class="mb-3">Top 20 Applicants with Multiple Loans Over Time (Line Chart)</h4>
                <!-- Chart Container -->
                <div class="canvasTopRanks">
                    <canvas id="TopApplicantsMultipleLoansChart"></canvas>
                </div>
            </div>
        </div>
       @*  <div class="col-md-6 col-lg-6">
            <div class="bg-light p-4 rounded">
                <h4 class="mb-3">Applications by Age Group</h4>
                <!-- Chart Container -->
                <div class="canvasTopRegtCorps canvasTopRanks">
                    <canvas id="AgeGroupsChart"></canvas>
                </div>
            </div>
        </div> *@
    </div>

    <br />
    <div class="row">
        <div class="col-md-12 col-lg-12 loan">
            <div class="bg-light p-4 rounded">
                <h4 class="mb-3">Comparison of Loan Types by Unit</h4>
                <!-- Chart Container -->
                <div class="canvasTopRanks">
                    <canvas id="LoancomparisonChart"></canvas>
                </div>
            </div>
        </div>
     
    </div>

</div>

