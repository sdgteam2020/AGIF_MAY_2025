@{
    ViewData["Title"] = "Check Application Status";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    var applications = new[]
    {
        new { Id = 1, Name = "Application A", Status = "Under Review", Timeline = new[] { ("Submitted", "2024-06-01"), ("Reviewed", "2024-06-03"), ("Reviewed", "2024-06-03") } },
        new { Id = 2, Name = "Application B", Status = "Approved", Timeline = new[] { ("Submitted", "2024-05-20"), ("Approved", "2024-05-25"), ("Reviewed", "2024-06-03") } }
    };
}
<link href="~/css/checkapplicationstatus.css" rel="stylesheet" />
<div class="container">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header btn-info text-white mb-3">
            <h4 class="mb-0 text-center">Application Status</h4>
        </div>
        <div class="card-body">
            <!-- Search Box Start -->
            <form id="searchByArmyNo" class="mb-4 d-flex justify-content-center">
                <div class="d-flex align-items-center search-gap search-form-container">
                    <!-- Dropdown Section -->
                    <div class="dropdown-section">
                        <select class="form-select border-info type-select" id="typeSelect" name="type">
                            <option value="Loan">Loan</option>
                            <option value="Maturity">Maturity</option>
                        </select>
                    </div>
                    <!-- Search Input Section -->
                    <div class="input-group shadow-sm search-input-group">
                        <input type="text" class="form-control border-info" placeholder="Enter Army No" aria-label="Army No" name="armyNo" id="armyNoInput">
                        <button class="btn btn-info text-white fw-bold px-4" type="submit">
                            <i class="fas fa-search me-2"></i>Search
                        </button>
                    </div>
                </div>
            </form>

            <div id="noResultsMessage" class="alert alert-warning d-none">
                <i class="fas fa-info-circle me-2"></i>No applications found for the entered Army No.
            </div>

            <!-- Search Box End -->
            <div id="resultsTable" class="d-none">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark bg-primary text-white">
                        <tr>
                            <th>Application Name</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="applicationTableBody">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<script src="~/devjs/checkapplicationstatus.js"></script>