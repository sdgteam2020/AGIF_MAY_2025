@{
    ViewData["Title"] = "Check Application Status";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    
}

<link href="~/css/checkapplicationstatus.css" rel="stylesheet" />
<div class="container container1 py-4 bg-white">

    <div class="row mb-4">
    <div class="card-wrapper">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-header ApplicationStatusHeader text-white mb-3">
                <h4 class="mb-0 text-center">Application Status</h4>
            </div>
            <div class="card-body">
                <!-- Search Box Start -->
                <form id="searchByArmyNo" class="mb-4 d-flex justify-content-center">
                    <div class="d-flex align-items-center search-gap search-form-container">
                        <!-- Dropdown Section -->
                        <div class="dropdown-section">
                            <select class="form-select border-input type-select" id="typeSelect" name="type">
                                <option value="Loan">Loan</option>
                                <option value="Maturity">Maturity</option>
                            </select>
                        </div>
                        <!-- Search Input Section -->
                        <div class="input-group shadow-sm search-input-group">
                            <input type="text" class="form-control border-input" placeholder="Enter Army No" aria-label="Army No" name="armyNo" id="armyNoInput">
                            <button class="btn btn-custom text-white fw-bold px-4" type="submit">
                                <i class="fas fa-search me-2"></i>Search
                            </button>
                        </div>
                    </div>
                </form>
                <div id="noResultsMessage" class="alert alert-warning d-none">
                    <i class="fas fa-info-circle me-2"></i>No applications found for the entered Army No.
                </div>
                <!-- Search Box End -->
                <div class="table-responsive">
                        <div id="resultsTable" class="d-none">
                            <table class="table table-responsive table-striped table-bordered">
                                <thead class="thead-dark bg-primary text-white">
                                    <tr>
                                        <th>Ser No</th>
                                        <th class="w-20">Application Name</th>
                                        <th class="w-25">Status</th>
                                        <th class="w-25">Action</th>
                                        <th class="w-25">Remarks</th>

                                    </tr>
                                </thead>
                                <tbody id="applicationTableBody">
                                   
                                </tbody>
                            </table>
                        </div>

                </div>
            </div>
        </div>
    </div>
    </div>
    </div>



<script src="~/devjs/checkapplicationstatus.js"></script>
