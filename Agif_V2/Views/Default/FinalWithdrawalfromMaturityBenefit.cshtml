@{
    ViewData["Title"] = "FinalWithdrawalfromMaturityBenefit";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


<div class="container py-4 bg-white">
    <div class="row mb-4">
        <div class="col-12 text-center pagetitlethree">
            <h1 class="display-4 fw-bold">Final Withdrawal from Maturity Benefit</h1>
        </div>
    </div>

    <!-- Main Information Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="h4 mb-0">ONE TIME WITHDRAWAL UPTO 90% FROM MATURITY AFTER 15 YRS OF SERVICE</h2>
                </div>
                <div class="card-body">
                    <p class="lead">
                        Army pers can withdraw upto 90% from maturity amt for edn of wards/ marriage of children on
                        completion of 15 yrs of service. 90% withdrawal for HBA repair or renovation in the last two yrs of service will be as hither-to-fore.
                    </p>

                    <div class="text-center my-4">
                        <a href="~/_forms/withdrawal_on_children_edn.pdf" target="_blank" class="btn btn-primary">
                            Application form for 90% Maturity Withdrawal for Child Education/Marriege OR Renovation
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Application Process Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Sequence of action for Forwarding appln through ASIGMA</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>(a)</strong> Download the blank application form from AGIF portal on ADN.
                        </li>
                        <li class="list-group-item">
                            <strong>(b)</strong> Fill all the applicable field by indl and sign the application.
                        </li>
                        <li class="list-group-item">
                            <strong>(c)</strong> Attach the supporting docus as mentioned in the application.
                        </li>
                        <li class="list-group-item">
                            <strong>(d)</strong> Get all the docus attested by Adjt/ Coy Cdr/ GSO1.
                        </li>
                        <li class="list-group-item">
                            <strong>(e)</strong> Get the MAWD appication countersigned by CO.
                        </li>
                        <li class="list-group-item">
                            <strong>(f)</strong> Scan the ink signed application alongwith supporting docus and fwd through ASIGMA.
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Withdrawal Guidelines Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Withdrawal Guidelines</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>(a)</strong> Fwd of claims for final withdrawal with less than 15 yrs of service.
                            <ul class="mt-2">
                                <li><strong>(i)</strong> Edn of member's legitimate/ legally adopted children from class 12th onwards.</li>
                                <li><strong>(ii)</strong> Marriage of member's legimate/ legally adopted children.</li>
                            </ul>
                        </li>
                        <li class="list-group-item">
                            <strong>(b)</strong> Withdrawal of amt upto 90% for purpose of renovation/ repair of house during last two yrs of service.
                        </li>
                        <li class="list-group-item">
                            <strong>(c)</strong> Member can NOT withdraw MAWD more than two times in entire service. This includes withdrawal in
                            last two yrs of service as specified above.
                        </li>
                        <li class="list-group-item">
                            <strong>(d)</strong> Min gap between two withdrawals should be more than six months.
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Common Errors Section -->
    <div class="row">
        <div class="col-12">
            <div class="card border-warning mb-4">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">Common Errors Observed in Processing Final Withdrawal</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>(a)</strong> Fwd of claims for final withdrawal with less than 15 yrs of service.
                        </li>
                        <li class="list-group-item">
                            <strong>(b)</strong> Incomplete details.
                        </li>
                        <li class="list-group-item">
                            <strong>(c)</strong> Fwd of claims for marriage of child less than 18 yrs of age.
                        </li>
                        <li class="list-group-item">
                            <strong>(d)</strong> Cancelled cheque of DSP acct not att.
                        </li>
                        <li class="list-group-item">
                            <strong>(e)</strong> Photocopy of Field Conduct Sheet First Page.
                        </li>
                        <li class="list-group-item">
                            <strong>(f)</strong> Expdr detls/ School Fee Receipt not att.
                        </li>
                        <li class="list-group-item">
                            <strong>(g)</strong> Payslip of Indl's
                        </li>
                        <li class="list-group-item">
                            <strong>(h)</strong> All docus reqd to be CTC by competent auth.
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>