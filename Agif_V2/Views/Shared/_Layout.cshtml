    <link rel="shortcut icon" href="~/images/favicon.svg" type="image/x-icon" />
    <title>ARMY GROUP INSURANCE FUND 3.0</title>

    <!-- ========== All CSS files linkup ========= -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
