                            <li>
                                <a href="~/ApplicationRequest/ClaimApplicationListAdmin?status=4" class=""><i class="bi bi-hourglass"></i>Maturity Downloaded Application </a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item nav-item-has-children">
                        <a href="#0"
                           data-bs-toggle="collapse"
                           data-bs-target="#ddmenu_2"
                           aria-controls="ddmenu_2"
                           aria-expanded="false"
                           aria-label="Toggle navigation">
                            <i class="bi bi-list-check"></i>
                            <span class="text">User Approval List</span>
                        </a>
                        <ul id="ddmenu_2" class="collapse show dropdown-nav">
                            <li>
                                <a href="~/Account/GetAllUsers?status=true" class="active"><i class="bi bi-hourglass"></i>Active Users </a>
