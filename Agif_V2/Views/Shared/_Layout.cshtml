                           data-bs-target="#ddmenu_1"
                           aria-controls="ddmenu_1"
                           aria-expanded="false"
                           aria-label="Toggle navigation">
                            <i class="bi bi-list-check mr-2"></i>
                            <span class="text">Applications</span>
                        </a>
