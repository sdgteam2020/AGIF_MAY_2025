                           data-bs-toggle="collapse"
                           data-bs-target="#receivedApplicationToAdmin"
                           aria-controls="receivedApplicationToAdmin"
                           aria-expanded="false"
                           aria-label="Toggle navigation">
                            <i class="bi bi-list-check"></i>
                            <span class="text">Received Application</span>
                        </a>
                        <ul id="receivedApplicationToAdmin" class="collapse show dropdown-nav">
                            <li>
                                <a href="~/ApplicationRequest/UsersApplicationListAdmin?status=2" class="active"><i class="bi bi-hourglass"></i>CA/PCA/HBA Received Application </a>
                            </li>
                            <li>
                                <a href="~/ApplicationRequest/UsersApplicationListAdmin?status=4" class=""><i class="bi bi-hourglass"></i>CA/PCA/HBA Downloaded Application </a>
