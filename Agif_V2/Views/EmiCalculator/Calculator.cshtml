@{
    ViewData["Title"] = "EMI Calculator";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<link href="~/css/emicalculator.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12">
            <h1 class="header-title">LOAN EMI CALCULATOR</h1>
        </div>
    </div>

    <div class="row">
        <!-- Calculator Form -->
        <div class="col-lg-4 col-md-6">
            <div class="calculator-container h-100">
                <h4 class="ApplicationStatusHeader text-center mb-4 text-white fw-bold">Calculate Your EMI</h4>

                <form id="emiForm">
                    <div class="mb-3">
                        <label class="form-label">Loan Amount</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-currency-rupee"></i></span>
                            <input type="text" class="form-control with-icon" id="loanAmount" oninput="formatIndianNumber(this)" min="0" step="1000">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Rate of Interest (ROI)</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-percent"></i></span>
                            <input type="number" class="form-control with-icon" id="interestRate"  min="0" step="0.01">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="maxEmi">Nos of EMI</label>
                        <input type="number" class="form-control" id="maxEmi" min="1" max="360">
                    </div>


                    <button type="button" class="btn btn-calculate btn-primary w-100 d-none" onclick="calculateEMI()">
                        <i class="fas fa-calculator me-2"></i>Calculate EMI
                    </button>

                    <div id="emiResult" class="emi-result d-none">
                        <h5><i class="fas fa-money-bill-wave me-2"></i>Monthly EMI</h5>
                        <h3 id="emiAmount">₹ 0</h3>
                    </div>
                </form>
            </div>
        </div>

        <!-- Loan Information Table -->
        <div class="col-lg-8 col-md-6">
            <div class="table-container h-100">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 table-bordered">
                        <thead>
                            <tr>
                                <th rowspan="2">Ser No</th>
                                <th rowspan="2">Loan Type</th>
                                <th rowspan="2">Max EMI</th>
                                <th colspan="3">Max Eligible Loan Amount</th>
                                <th colspan="2">Rate of Interest</th>
                            </tr>
                            <tr>
                                <th>Officers</th>
                                <th>JCOs</th>
                                <th>OR</th>
                                <th>Officers</th>
                                <th>JCOs/OR</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><strong>1.</strong></td>
                                <td class="text-start">
                                    <strong>HBA</strong>
                                </td>
                                <td><span class="badge bg-primary">240</span></td>
                                <td>₹ 1 Cr</td>
                                <td>₹ 50 Lakh</td>
                                <td>₹ 40 Lakh</td>
                                <td><span class="badge bg-success">7.5%</span></td>
                                <td><span class="badge bg-success">7%</span></td>
                            </tr>
                            <tr>
                                <td><strong>2.</strong></td>
                                <td class="text-start"><strong>HBA</strong> (Repair & Renovation)</td>
                                <td><span class="badge bg-primary">120</span></td>
                                <td colspan="3">₹ 20 Lakh</td>
                                <td><span class="badge bg-warning">8%</span></td>
                                <td><span class="badge bg-warning">7.5%</span></td>
                            </tr>
                            <tr>
                                <td rowspan="4"><strong>3.</strong></td>
                                <td rowspan="4" class="text-start"><strong>CA</strong> (Conveyance Advance)</td>
                                <td><span class="badge bg-primary">96</span></td>
                                <td>₹ 20 Lakh (New Car)</td>
                                <td colspan="2">₹ 10 Lakh (New Car)</td>
                                <td rowspan="4"><span class="badge bg-info">8.25%</span></td>
                                <td rowspan="4"><span class="badge bg-info">8.25%</span></td>
                            </tr>
                            <tr>
                                <td><span class="badge bg-primary">96</span></td>
                                <td>₹ 25 Lakh (EV)</td>
                                <td colspan="2">₹ 15 Lakh (EV)</td>
                            </tr>
                            <tr>
                                <td><span class="badge bg-primary">72</span></td>
                                <td>₹ 10 Lakh (Old Car)</td>
                                <td colspan="2">₹ 5 Lakh (Old Car)</td>
                            </tr>
                            <tr>
                                <td><span class="badge bg-primary">60</span></td>
                                <td>₹ 10 Lakh TW</td>
                                <td colspan="2">₹ 2 Lakh TW</td>
                            </tr>
                            <tr>
                                <td><strong>4.</strong></td>
                                <td class="text-start"><strong>PCA</strong> (Personal Computer Advance)</td>
                                <td><span class="badge bg-primary">48</span></td>
                                <td colspan="3">₹ 2 Lakh</td>
                                <td><span class="badge bg-danger">8.50%</span></td>
                                <td><span class="badge bg-danger">8.50%</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/devjs/emicalculator.js"></script>