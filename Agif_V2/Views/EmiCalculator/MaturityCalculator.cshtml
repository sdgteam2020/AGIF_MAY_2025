@{
    ViewData["Title"] = "Maturity Calculator";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<link href="~/css/calculator.css" rel="stylesheet" />
<!-- jQuery Toast Plugin -->

<div class="military-grid">
    <div class="army-emblem">🏛️</div>
    <div class="floating-particles" id="particles"></div>

    <div class="container-fluid calculator-container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-12 col-lg-4 col-xl-4">
                <div class="calculator-body">
                    <div class="army-header">
                        <div class="army-title">🧮 MATURITY BENEFIT CALCULATOR</div>
                    </div>

                    <div id="loanForm">
                        <!-- Date Of Joining -->
                        <div class="input-section">
                            <div class="section-label">📅 Enrolment/Start Date of AGIF subscription</div>
                            <input type="text" class="form-control monthPicker" id="dateOfBirth" aria-label="Date of Birth" required placeholder="DD/MM/YYYY" autocomplete="off">
                        </div>

                        <!-- Till Date -->
                        <div class="input-section">
                            <div class="section-label">📊 Calculate Till Date</div>
                            <input type="date"
                                   id="tillDate"
                                   name="tillDate"
                                   class="form-control"
                                   disabled />
                        </div>

                        <!-- Rank Group Radio Buttons -->
                        <div class="input-section">
                            <div class="section-label">🎖️ Rank Group</div>
                            <div class="rank-selection">
                                <div class="rank-option">
                                    <input type="radio" id="officers" name="category" value="1" class="rank-radio">
                                    <label for="officers" class="rank-label officers">
                                        <div class="rank-icon">👨‍✈️</div>
                                        <div class="rank-title">OFFICERS</div>
                                        <div class="rank-description">Commissioned Officers</div>
                                    </label>
                                </div>
                                <div class="rank-option">
                                    <input type="radio" id="jco_or" name="category" value="2" class="rank-radio">
                                    <label for="jco_or" class="rank-label">
                                        <div class="rank-icon">🪖</div>
                                        <div class="rank-title">JCO/OR</div>
                                        <div class="rank-description">Junior Commissioned Officers<br>& Other Ranks</div>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="input-section">
                            <div class="section-label">Breakdown of Current Monthly Subscription</div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered align-middle mb-0 text-center text-white">
                                        <thead>
                                            <tr class="text-white">
                                                <th>Category</th>
                                                <th>Risk Element</th>
                                                <th>Saving Element</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Offrs</td>
                                                <td>1500</td>
                                                <td>11000</td>
                                                <td>12500</td>
                                            </tr>
                                            <tr>
                                                <td>JCOs/OR</td>
                                                <td>800</td>
                                                <td>6700</td>
                                                <td>7500</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/inputmask/dist/inputmask.min.js"></script>
<script type="text/javascript" src="~/js/mdb/new-prism.js"></script>
<script type="text/javascript" src="~/js/mdb/mdbsnippet.min.js"></script>
<script type="text/javascript" src="~/js/mdb/mdb.min.js"></script>
<script src="~/devjs/MaturityCalculator.js"></script>