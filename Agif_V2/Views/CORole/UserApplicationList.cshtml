@{
    ViewData["Title"] = "User Application List";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="container-fluid bg-white shadow-sm rounded p-4 mt-3">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <h3 class="text-center fw-bold text-primary mb-3" id="userApplicationListHeading">
                User Application List - Loan
            </h3>
            <hr class="border-primary border-2">
        </div>
    </div>

    <!-- Application Type Buttons -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <div class="btn-group" role="group" aria-label="Application Types">
                <button id="btnLoan" class="btn btn-warning px-4 py-2 fw-semibold">
                    <i class="fas fa-money-bill-wave me-2"></i>Loan
                </button>
                <button id="btnMaturity" class="btn btn-primary px-4 py-2 fw-semibold">
                    <i class="fas fa-calendar-check me-2"></i>Maturity
                </button>
            </div>
        </div>
    </div>

    <!-- Status Filter Buttons -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex flex-wrap justify-content-center justify-content-md-start gap-2">
                <button id="btnpending" class="btn btn-warning px-4 py-2 fw-semibold">
                    <i class="fas fa-clock me-2"></i>Pending
                    <span class="badge bg-light text-dark ms-2">0</span>
                </button>
                <button id="btnReject" class="btn btn-danger px-4 py-2 fw-semibold">
                    <i class="fas fa-times-circle me-2"></i>Rejected
                    <span class="badge bg-light text-dark ms-2">0</span>
                </button>
                <button id="btnApproved" class="btn btn-success px-4 py-2 fw-semibold">
                    <i class="fas fa-check-circle me-2"></i>Approved
                    <span class="badge bg-light text-dark ms-2">0</span>
                </button>
            </div>
        </div>
    </div>

    <!-- Data Table Section -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>Application Details
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table id="tblList" class="table table-striped table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col" class="text-center">#</th>
                                    <th scope="col">Army No</th>
                                    <th scope="col">Applicant Name</th>
                                    <th scope="col">Application Type</th>
                                    <th scope="col">Date of Birth</th>
                                    <th scope="col">Applied Date</th>
                                    <th scope="col" class="text-center">Present Status</th>
                                    <th scope="col" class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody id="DetailBody">
                                <!-- Sample Data for Demonstration -->
                                <tr>
                                    <td class="text-center fw-bold">1</td>
                                    <td class="font-monospace">ARM001</td>
                                    <td>John Doe</td>
                                    <td><span class="badge bg-info">Loan</span></td>
                                    <td>1985-06-15</td>
                                    <td>2024-12-01</td>
                                    <td class="text-center">
                                        <span class="badge bg-warning">Pending</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button class="btn btn-outline-primary btn-sm" title="View">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-success btn-sm" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-center fw-bold">2</td>
                                    <td class="font-monospace">ARM002</td>
                                    <td>Jane Smith</td>
                                    <td><span class="badge bg-primary">Maturity</span></td>
                                    <td>1982-03-22</td>
                                    <td>2024-11-28</td>
                                    <td class="text-center">
                                        <span class="badge bg-success">Approved</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button class="btn btn-outline-primary btn-sm" title="View">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-success btn-sm" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-center fw-bold">3</td>
                                    <td class="font-monospace">ARM003</td>
                                    <td>Robert Johnson</td>
                                    <td><span class="badge bg-info">Loan</span></td>
                                    <td>1988-09-10</td>
                                    <td>2024-11-25</td>
                                    <td class="text-center">
                                        <span class="badge bg-danger">Rejected</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button class="btn btn-outline-primary btn-sm" title="View">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-success btn-sm" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">Showing 3 of 3 entries</small>
                        <nav>
                            <ul class="pagination pagination-sm mb-0">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                                </li>
                                <li class="page-item active">
                                    <a class="page-link" href="#">1</a>
                                </li>
                                <li class="page-item disabled">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/DevJs/COApplicationList.js"></script>