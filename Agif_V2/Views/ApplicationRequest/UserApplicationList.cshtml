@{
    ViewData["Title"] = "Users Application List";
}
@using DataTransferObject.Helpers;
@model SessionUserDTO;
@{
    string Page = "";
}
@if (ViewBag.Status != null && ViewBag.Status == 1)
{
    Page = "Pending Applications";
}
else if (ViewBag.Status != null && ViewBag.Status == 2)
{
    Page = "Approved Applications";
}
else
{
    Page = "Rejected Applications";
}
<div class="container">
    <div class="container-fluid">
        <!-- ========== title-wrapper start ========== -->
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title">
                        <h2>
                            @Page
                        </h2>
                    </div>
                </div>
                <!-- end col -->
                <div class="col-md-6">
                    <div class="breadcrumb-wrapper">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#0">Applications</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    @Page
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
    <div class="card mt-2">
       
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-wrapper table-responsive">
                        <table class="table table-striped border border-purple table-hover" id="tblApplications">
                            <thead>
                                <tr>
                                    <th>Sr.No.</th>
                                    <th>Army No</th>
                                    <th>Applicant Name</th>
                                    <th>Application Type</th>
                                    <th>Date of Birth</th>
                                    <th>Applied Date</th>
                                    <th class="noExport">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- DataTables will populate this -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="ViewPdf" tabindex="-1" aria-labelledby="ViewPdfLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content ">
            <!-- Modal Header -->
            <div class="modal-header  text-white border-0 py-3">
                <div class="d-flex align-items-center">
                    <i class="bi bi-file-earmark-pdf fs-4 me-3"></i>
                    <div>
                        <h5 class="modal-title fw-bold mb-0" id="ViewPdfLabel">View Application</h5>
                        <span class="opacity-75 d-none" id="spnapplicationId"></span>
                    </div>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body p-0 bg-secondary bg-opacity-10">
                <!-- PDF Toolbar -->
                    <div class="bg-white border-bottom px-3 py-2" style="z-index: 1; position: relative;" >
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <span class="badge bg-info me-3">
                                    <i class="bi bi-calendar3 me-1"></i>
                                    6/16/25, 2:11 PM
                                </span>
                                <span class="text-muted small">
                                    <i class="bi bi-person-circle me-1"></i>
                                    Applicant: <strong>John Doe</strong>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- PDF Container -->
                    <div class="d-flex justify-content-center align-items-center" style="height: calc(100vh - 200px);">
                    <div class="bg-white shadow-lg rounded" style="width: 95%; height: 95%;">
                        <div id="pdfContainer" class="w-100 h-100 d-flex justify-content-center align-items-center position-relative">
                            <!-- PDF Object -->
                                <object id="PdfViwerFOrDigital"
                                    type="application/pdf"
                                    class="w-100 h-100 border-0 rounded">
                            </object>

                            <!-- Loading overlay -->
                            <div id="loadingOverlay" class="position-absolute top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-center bg-white bg-opacity-75 d-none">
                                <div class="text-center">
                                    <div class="spinner-border text-primary mb-3" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    <p class="text-muted">Loading PDF...</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer bg-light border-top">
                <div class="d-flex justify-content-between w-100 align-items-center">
                    <div class="d-flex align-items-center">
                        <span class="badge bg-success me-2">
                            <i class="bi bi-check-circle me-1"></i>
                            Ready for Review
                        </span>
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>
                            Review the application details before processing
                        </small>
                    </div>
                    <div class="d-flex gap-2" id="DigitalSignatureforaction">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="ApplicationAction" tabindex="-1" aria-labelledby="ApplicationActionLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-bold" id="ApplicationActionLabel">
                    <i class="bi bi-file-earmark-check me-2"></i>
                    Application Review & Approval
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="card border-0">
                        <div class="card-header bg-secondary border-bottom">
                        <h4 class="card-title text-center mb-0 text-decoration-underline fw-bold text-uppercase">
                            Recommendations and Countersignature
                        </h4>
                    </div>

                    <div class="card-body">
                        <form id="recommendationForm">
                            <div class="row">
                                <div class="col-12">
                                    <!-- Checkbox Items -->
                                    <div class="list-group list-group-flush">

                                        <!-- Item 1 -->
                                        <div class="list-group-item border-0 px-0">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="instr" value="instr1" id="instr1">
                                                    <label class="form-check-label ms-2" for="instr1"
                                                           data-template="I certify that above [Application type] Application has been submitted by [Applicant Name]">
                                                        I certify that above <strong class="text-primary">[Application type]</strong> Application has been submitted by <strong class="text-primary">[Applicant Name]</strong>
                                                    </label>
                                            </div>
                                        </div>

                                        <!-- Item 2 -->
                                        <div class="list-group-item border-0 px-0">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="instr" value="instr2" id="instr2">
                                                    <label class="form-check-label ms-2" for="instr2"
                                                           data-template="It's certified that I am the CO/OC Tps of [Unit Name] and I am authorised to countersign financial documents of this individual.">
                                                        It's certified that I am the CO/OC Tps of <strong class="text-primary">[Unit Name]</strong> and I am authorised to countersign financial documents of this individual.
                                                    </label>
                                            </div>
                                        </div>

                                        <!-- Item 3 -->
                                        <div class="list-group-item border-0 px-0">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="instr" value="instr3" id="instr3">
                                                <label class="form-check-label ms-2" for="instr3">
                                                    I have interviewed him and verified his financial condition and established need for taking this loan. Applicant will be using loan amount for intended purpose only.
                                                </label>
                                            </div>
                                        </div>

                                        <!-- Item 4 -->
                                        <div class="list-group-item border-0 px-0">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="instr" value="instr4" id="instr4">
                                                    <label class="form-check-label ms-2" for="instr4"
                                                           data-template="It is certified that Bank A/c No [Account Number] of [Bank] with IFSC [IFSC Code] as given in the application and cancelled cheque in Salary account of [Applicant Name]">
                                                        It is certified that Bank A/c No <strong class="text-primary">[Account Number]</strong> of [Bank] with IFSC <strong class="text-primary">[IFSC Code]</strong> as given in the application and cancelled cheque in Salary account of <strong class="text-primary">[Applicant Name]</strong>
                                                    </label>
                                            </div>
                                        </div>

                                        <!-- Item 5 -->
                                        <div class="list-group-item border-0 px-0">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="instr" value="instr5" id="instr5">
                                                <label class="form-check-label ms-2" for="instr5">
                                                    I have satisfied myself of the correctness of personal details given in application. I have perused the supporting documents and checked their correctness. Supporting documents uploaded are readable and latest.
                                                </label>
                                            </div>
                                        </div>

                                        <!-- Final Recommendation -->
                                        <div class="list-group-item border-0 px-0 mt-3">
                                            <div class="alert alert-info d-flex align-items-center" role="alert">
                                                <i class="bi bi-info-circle-fill me-2"></i>
                                                <div>
                                                    <h6 class="alert-heading mb-0">Final Recommendation</h6>
                                                    <p class="mb-0 text-black">Application is recommended for sanction and accordingly I countersign the same.</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Action Buttons Section -->
                            <div class="row mt-4">
                                <div class="col-12">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <h6 class="card-title mb-3">Application Action</h6>
                                            <div class="row g-3 align-items-end">
                                                <div class="col-md-9">
                                                    <label for="txtremark" class="form-label small">Remarks</label>
                                                    <textarea class="form-control form-control-sm"
                                                              id="txtRemark"
                                                              placeholder="Enter your remarks here..."
                                                              rows="3"></textarea>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="d-grid gap-2">
                                                        <button type="button" class="btn btn-danger btn-sm" id="RejectButton" disabled>
                                                            <i class="bi bi-x-circle me-1"></i>
                                                            Reject
                                                        </button>
                                                        <button type="button" class="btn btn-success btn-sm" id="acceptButton" disabled>
                                                            <i class="bi bi-check-circle me-1"></i>
                                                            Recom & E-sign
                                                        </button>
                                                        <span display="none" id="IcNo" data-id="@ViewBag.ArmyNo"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-lg me-1"></i>
                    Cancel
                </button>
            </div>
        </div>
    </div>
</div>
</div>
@section Scripts {

    <!-- CSS: Bootstrap 5 and DataTables -->
    <link href="~/lib/datatables.net-bs5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/lib/datatables.net-buttons-bs5/css/buttons.bootstrap5.min.css" rel="stylesheet" />

    <!-- JS: jQuery (must come before DataTables) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- JS: DataTables core -->
    <script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs5/js/dataTables.bootstrap5.min.js"></script>

    <!-- JS: DataTables Buttons extension -->
    <script src="~/lib/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/lib/datatables.net-buttons-bs5/js/buttons.bootstrap5.min.js"></script>

}
<script src="~/devjs/usersapplications.js"></script>
