@{
    ViewData["Title"] = "Received Applications";
}

<div class="container">
    <div class="container-fluid">
        <!-- ========== title-wrapper start ========== -->
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title">
                        <h2>
                            CA/PCA/HBA Received Applications
                        </h2>
                    </div>
                </div>
                <!-- end col -->
                <div class="col-md-6">
                    <div class="breadcrumb-wrapper">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#0">Applications</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    CA/PCA/HBA Received Applications
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <div class="card mt-2">

            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <input class="form-control" type="date" id="toDate" name="toDate">
                        <button type="submit" name="action" value="Download" id="btnAllDownload" class="btn btn-primary" onclick="getAllApplicationByDateWise()">Download PDF</button>
                        
                        <div class="table-wrapper table-responsive">
                            <table class="table table-striped border border-purple table-hover" id="tblReceivedApplications">
                                <thead>
                                    <tr>
                                        <th>Sr.No.</th>
                                        <th>Status</th>
                                        <th>Army No</th>
                                        <th>Applicant Name</th>
                                        <th>Old Army No</th>
                                        <th>Regt/Corps</th>
                                        <th>Present Unit</th>
                                        <th>PCDA(O)/PAO(OR)</th>
                                        <th>Applied Date</th>
                                        <th>Download</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- DataTables will populate this -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    <!-- CSS: Bootstrap 5 and DataTables -->
    <link href="~/lib/datatables.net-bs5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/lib/datatables.net-buttons-bs5/css/buttons.bootstrap5.min.css" rel="stylesheet" />

    <!-- JS: jQuery (must come before DataTables) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- JS: DataTables core -->
    <script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs5/js/dataTables.bootstrap5.min.js"></script>

    <!-- JS: DataTables Buttons extension -->
    <script src="~/lib/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/lib/datatables.net-buttons-bs5/js/buttons.bootstrap5.min.js"></script>

    <script src="~/devjs/usersapplicationlistadmin.js"></script>
}